  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": ["--local", "--output", "markdown"],
      "envFile": "${userHome}/etc/k8s-gpt-dev.env"
    },
    {
      "name": "Python: Debug File",
      "type": "debugpy",
      "request": "launch",
      "purpose": ["debug-test"],
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": ["--local", "--output", "markdown"],
      "envFile": "${userHome}/etc/k8s-gpt-dev.env"
    }
  ]
}
